{
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "commonjs",
		"target": "es5",
		"noImplicitAny": true,
		"sourceMap": true,
		"declaration": true,
		"declarationDir": "./dist",
		"outDir": "./dist",
		"lib": [ "ES2017", "dom" ]
	},
	"include": [
		"src/main/**/*.ts"
	],
	"exclude": [
		"src/main/**/*.spec.ts"
	]
}
